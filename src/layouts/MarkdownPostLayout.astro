---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <p><em>{frontmatter.description}</em></p>
    <p class="meta">
        Written by <b>{frontmatter.author}</b>
        On {frontmatter.pubDate.toString()}
    </p>

    <!-- top image  -->
    { 
        (frontmatter.image.url) && (
            <div class="center">
                <img
                    src={frontmatter.image.url}
                    alt={frontmatter.image.alt}
                    width="100%"
                />
            </div>
            <span class="center caption">{frontmatter.image.alt}</span>
        )
    }

    <slot />

    <div class="tags">
        {
            frontmatter.tags.map((tag) => (
                <p class="tag">
                    <a href={`/tags/${tag}`}>#{tag}</a>
                </p>
            ))
        }
    </div>
    <!-- Tag Example  -->
    <!-- <ul>
        {
            frontmatter.tags.map((tag) => (
                <li style="display: inline;"> #{tag} </li>
            ))
        }
    </ul> -->
</BaseLayout>

<style>
    a {
        color: #4c1d95;
        text-decoration: none;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        /* border: dotted 1px #a1a1a1; */
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: 1.15em;
        background-color: #4d1d9515;
    }

    .tag:hover {
        text-decoration: underline;
        text-decoration-style: wavy;
        text-underline-offset: 0.1rem;
        text-decoration-skip:;
        text-decoration-color: #4c1d95;
        text-decoration-skip: all;
    }

    .meta {
        font-size: 0.8rem;
        max-width: 100%;
        font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
            sans-serif;
        color: #3a3a3a;
        background-color: #4d1d9515;
        padding: 0.25rem 4rem 0.25rem 4rem;
        border-radius: 0.75rem;
    }

    .center {
        margin-left: auto;
        margin-right: auto;
        /* margin-block: 2.5rem; */
        justify-content: center;
        align-items: center;
        /* border: 1px solid black; */
        /* overflow: hidden; */
        width: 100%;
        display: flex;
    }

    /* Image Decoration */
    .center > img {
        border-radius: 0.75em;
        box-shadow:
            0 4px 8px 0 rgba(0, 0, 0, 0.2),
            0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    .caption {
        margin-top: 0.5em;
        margin-bottom: 1.75em;
        text-decoration-style: wavy;
        text-decoration-line: underline;
        text-underline-offset: 5px;
        font-style: italic;
        text-decoration-color: #562f91;
        width: 80%;
        font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
            sans-serif;
        text-align: center;
    }
</style>
